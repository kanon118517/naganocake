<div class = "container">
  
  <h2>注文情報入力</h2>
  <%= form_with model: @order, url:confirm_orders_path,method: :post do |f| %>

<p class="font-weight-bold">支払方法</p>
<div class = "text-left">
<div class = "row">
  <div class = "col">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
    <br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(2) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
    </div>
  </div>
</div>

<p class="font-weight-bold">お届け先</p>
<%= '〒' + @customer.postal_code %>
<%= @customer.address %><br />
<%= @customer.last_name + @customer.first_name %><br />
<%= f.hidden_field :delivery_charge, :value => @order.delivery_charge %>

<div class = "text-center">
  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
</div>


<% end %>

</div>