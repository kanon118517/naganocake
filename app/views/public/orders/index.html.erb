<div class = "container">
    <div class = "row">
        <div class = "col-md-1"></div>
        <h2>注文履歴一覧</h2>
    </div>

<div class = "row">
    <div class = "col">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">注文日</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">配送先</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">注文商品</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">支払金額</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">注文詳細</div></th>
                </tr>
            </thead>
            
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                    <td>
                        〒<%= order.delivery_postal_code %><br />
                        <%= order.delivery_adress %><br />
                        <%= order.delivery_name %>
                    </td>
                    <td>
                        <% order.order_items.each do |order_item| %>
                            <%= order_item.item.name %><br />
                        <% end %>
                    </td>
                    <td> <%= order.payment %></td>
                    <td>
                        <%= link_to "表示する", show_orders_path(order.id), class:"btn btn-primary" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>


</div>