<div class = "container">
    <div class = "row">
        <div class = "col-md-1"></div>
        <h2>注文履歴詳細</h2>
    </div>

    <div class = "row">
        <div class = "col-md-6">
    <p class="font-weight-bold">注文情報</p>
     <table class="table table-bordered">
      <tbody>
        <tr>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">注文日</div></th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">配送先</div></th>
            <td>
                〒<%= @order.delivery_postal_code %><br />
                <%= @order.delivery_adress %><br />
                <%= @order.delivery_name %>
            </td>
        </tr>
        <tr>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">支払方法</div></th>
            <td><%= @order.payment_method_i18n %></td>
        </tr>
    </tbody>
    </table>
</div>

<div class = "col-md-4">
    <p class="font-weight-bold">請求情報</p>
    <table class="table table-bordered">
      <tbody>
          <tr>
              <th class="bg-light d-block d-md-table-cell"><div class="text-center">商品合計</div></th>
              <td><%= @sum.round %></td>
          </tr>
          <tr>
              <th class="bg-light d-block d-md-table-cell"><div class="text-center">送料</div></th>
              <td><%= @order.delivery_charge %></td>
          </tr>
          <tr>
              <th class="bg-light d-block d-md-table-cell"><div class="text-center">ご請求額</div></th>
              <td><%= @sum.round + @order.delivery_charge %></td>
          </tr>
         </tbody>
        </table>
        </div>
    </div>

<div class = "row">
    <div class = "col-md-9">
        <p class="font-weight-bold">注文内容</p>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">商品</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">単価(税込)</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">個数</div></th>
                    <th class="bg-light d-block d-md-table-cell"><div class="text-center">小計</div></th>
                </tr>
            </thead>

            <tbody>
                <% @order_item.each do |order_item| %>
                <tr>
                  <td><div class="text-center"><%= order_item.item.name %></div></td>
                  <td><div class="text-center"><%= order_item.item.with_tax_price %></div></td>
                  <td><div class="text-center"><%= order_item.amount %></div></td>
                  <td><div class="text-center"><%= order_item.item.with_tax_price * order_item.amount %></div></td>
                </tr>
                <% end %>
            </tbody>
    </div>
</div>

</div>