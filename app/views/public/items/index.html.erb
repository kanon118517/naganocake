  <div class = "container">
<h2>商品一覧</h2>

 <div class = "row">
     <% @items.each do |item| %>
     <div class = "col-md-1"></div>
        <div class = "col-md-2">
           <div class="d-flex flex-wrap">

            <%= image_tag item.image %>

            <figcaption class="figure-caption">
          <%= link_to item.name, item_path(item.id) %>
          ¥<%= item.price %>
        </figcaption>
        </div>
        </div>
        <% end %>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= paginate @items %>
</div>
</div>

