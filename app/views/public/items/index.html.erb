  <div class = "container">
<h2>商品一覧</h2>

 <div class = "row">
     <% @items.each do |item| %>
     <div class = "col-md-1"></div>
        <div class = "col-md-2">
           <div class="d-flex flex-wrap">

            <%= link_to image_tag(item.image), item_path(item.id) %>

            <figcaption class="figure-caption">

          <%= item.name %>
          ¥<%= item.price %>
        </figcaption>

        </div>
        </div>
        <% end %>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= paginate @items %>
</div>
</div>

