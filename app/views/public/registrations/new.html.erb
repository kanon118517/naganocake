<div class = "container">
<div class = "row">
  <div class = "col-md-1"></div>
  <h4>新規会員登録</h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class = "row">
  <div class = "col-md-3">
    <p>名前</p>
  </div>
  <div class = "col-md-1">
     <label>(姓)</label>
  </div>
  <div class = "col-md-2">
     <%= f.text_field :last_name,class:"form-control", style:"margin: 3px;" %>
  </div>
  <div class = "col-md-1">
    <label>(名)</label>
  </div>
  <div class = "col-md-2">
    <%= f.text_field :first_name,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>フリガナ</p>
  </div>
  <div class = "col-md-1">
     <label>(セイ)</label>
  </div>
  <div class = "col-md-2">
     <%= f.text_field :last_name_kana,class:"form-control", style:"margin: 3px;" %>
  </div>
  <div class = "col-md-1">
    <label>(メイ)</label>
  </div>
  <div class = "col-md-2">
    <%= f.text_field :first_name_kana,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>メールアドレス</p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2">
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>郵便番号（ハイフンなし）</p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2">
     <%= f.text_field :postal_code,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>住所</p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-5">
     <%= f.text_field :address,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>電話番号（ハイフンなし）</p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2">
     <%= f.text_field :telephone_number,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
    </p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2">
     <%= f.password_field :password, autocomplete: "new-password",class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-3">
    <p>パスワード（確認用）</p>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2">
     <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<br>

  <div class="text-center">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<div class = "row">
  <div class = "col-md-1"></div>
  <h4>既に登録済みの方</h4>
</div>
<div class = "row">
  <div class = "col-md-2"></div>
  <%= link_to "こちら",new_customer_session_path %>からログインして下さい。
</div>


</div>
</div>
</div>