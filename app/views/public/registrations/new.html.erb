<div class = "container">


<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class = "row g-6">
   <div class = "col">
     <label class = "col-sm-2">名前</label>
    <label class = "col-sm-1">(姓)</label>
    <%= f.text_field :last_name %>
    <label class = "col-sm-1">(名)</label>
    <%= f.text_field :first_name %>
    </div>
  </div>

  <div class = "row g-6">
    <div class = "col">
      <label class = "col-sm-2">フリガナ</label>
    <label class = "col-sm-1">(セイ)</label>
    <%= f.text_field :last_name_kana %>
    <label class = "col-sm-1">(メイ)</label>
    <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class ="row g-6">
    <div class = "col">
      <label class = "col-sm-3">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>


  <div class = "row g-6">
    <div class = "col">
      <label class = "col-sm-3">郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class = "row g-6">
    <div class = "col">
    <label class = "col-sm-3">住所</label>
    <%= f.text_field :address %>
    </div>
  </div>

  <div class = "row g-6">
    <div class = "col">
      <label class = "col-sm-3">電話番号（ハイフンなし）</label>
      <%= f.text_field :telephone_number %>
      </div>
  </div>

  <div class="row g-6">
    <div class = "col">
      <label class = "col-sm-3">パスワード
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </label>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class ="row g-6">
    <div class = "col">
      <label class = "col-sm-3">パスワード（確認用）</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
</div>
</div>