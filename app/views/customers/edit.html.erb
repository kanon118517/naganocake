<h2>プロフィール編集</h2>
<%= form_with model: @customer, url: information_update_path do |f| %>

  <label>氏名</label>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>

  <label>フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>

  <label>郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true %>

  <label>住所</label>
    <%= f.text_field :address, autofocus: true %>

  <label>電話番号</label>
    <%= f.text_field :telephone_number %>

  <label>メールアドレス</label>
    <%= f.email_field :email %>

  <%= f.submit "編集内容を保存" %>

  <% end %>

<%= link_to "退会する", confirm_path %>
