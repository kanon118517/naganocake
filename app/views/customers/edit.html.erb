<div class = "container">
  <div class = "row">
    <div class = "col-md-2"></div>
    <div class = "col-md-5">
      <h2>プロフィール編集</h2>
    </div>
  </div>

<%= form_with model: @customer, url: information_update_path do |f| %>

<div class = "row g-2">
  <div class = "col-md-2">
    <label>氏名</label>
  </div>
  <div class = "col-md-2" style="padding: 3px;">
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2" style="padding: 3px;">
     <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2">
    <label>フリガナ</label>
  </div>
  <div class = "col-md-2" style="padding: 3px;">
     <%= f.text_field :last_name_kana, autofocus: true, class:"form-control" %>
  </div>
  <div class = "col-md-1"></div>
  <div class = "col-md-2" style="padding: 3px;">
    <%= f.text_field :first_name_kana, autofocus: true, class:"form-control" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2">
    <label>郵便番号</label>
  </div>
  <div class = "col-md-2" style="padding: 3px;">
     <%= f.text_field :postal_code, autofocus: true, class:"form-control" %>
  </div>
</div>
  
<div class = "row g-2">
  <div class = "col-md-2">
    <label>住所</label>
  </div>
  <div class = "col-md-5" style="padding: 3px;">
    <%= f.text_field :address, autofocus: true, class:"form-control" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2">
     <label>電話番号</label>
  </div>
  <div class = "col-md-2" style="padding: 3px;">
    <%= f.text_field :telephone_number, class:"form-control" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2">
    <label>メールアドレス</label>
  </div>
  <div class = "col-md-2" style="padding: 3px;">
     <%= f.email_field :email, class:"form-control" %>
  </div>
</div>
 
<br>
<div class = "row">
 
    <div class = "col-md-6">
       <div class = "text-center">
      <%= f.submit "編集内容を保存", class:"btn btn-success" %>
    
      <% end %>
      </div>
    </div>
    <div class = "col-md-2">
      <div class = "text-center">
      <%= link_to "退会する", confirm_path, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>


</div>