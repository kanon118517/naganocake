<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h3>会員一覧</h3>
  </div>

<div class = "row">
  <div class = "col-md-2"></div>
  <div class = "col-md-8">
    <table class="table">

      <thead>
        <tr>
          <th class="bg-light d-block d-md-table-cell"><div class="text-center">会員ID</div></th>
          <th class="bg-light d-block d-md-table-cell"><div class="text-center">氏名</div></th>
          <th class="bg-light d-block d-md-table-cell"><div class="text-center">メールアドレス</div></th>
          <th class="bg-light d-block d-md-table-cell"><div class="text-center">ステータス</div></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><div class="text-center"><%= customer.id %></div></td>
          <td><div class="text-center"><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id) %></div></td>
          <td><div class="text-center"><%= customer.email %></div></td>
          <td><div class="text-center"><%= customer.is_deleted ? '退会':'有効' %></div></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= paginate @customers %>
</div>


</div>