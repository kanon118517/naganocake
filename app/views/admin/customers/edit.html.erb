
<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>

<%= form_with(model: [:admin, @customer]) do |f| %>

<p>会員ID</p><%= @customer.id %>
<p>氏名</p><%= f.text_field :last_name %> <%= f.text_field :first_name %>
<p>フリガナ</p><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
<p>郵便番号</p><%= f.text_field :postal_code %>
<p>住所</p><%= f.text_field :address %>
<p>電話番号</p><%= f.text_field :telephone_number %>
<p>メールアドレス</p><%= f.email_field :email %>
<p>会員ステータス</p>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted_false, "有効" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted_true, "退会" %><br />
<%= f.submit '変更を保存' %>
<% end %>
