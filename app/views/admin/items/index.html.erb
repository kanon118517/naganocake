<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h3>商品一覧</h3>
    <div class = "col-md-8"></div>
    <div class = "text-right">
      <%= link_to " + ", new_admin_item_path, class:"btn btn-outline-secondary" %>
    </div>
  </div>


<div class = "row">
  <div class = "col-md-1"></div>
  <div class = "col-md-10">
    <table class="table">
      <thead>
        <tr>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">商品ID</div></th>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">商品名</div></th>
            <th class="bg-light d-block d-md-table-cell"><div class="text-center">税抜価格</div></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
           <td><div class="text-center"><%= item.id %></div></td>
           <td><div class="text-center"><%= link_to item.name, admin_item_path(item.id) %></div></td>
           <td><div class="text-center"><%= item.price %></div></td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= paginate @items %>
</div>
</div>