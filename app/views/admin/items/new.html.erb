<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h2>商品新規登録</h2>
  </div>
  
  <div class = "row">
    <div class = "col-md-2"></div>
    <% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  </div>
  
  

<%= form_with(model: [:admin, @item]) do |f| %>
<div class = "row">
  <div class = "col-md-2"></div>
  <div class = "col-md-2">
    <p>商品画像</p>
  </div>
  <div class = "col-md-6">
     <%= f.file_field :image, accept: "image/*" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2"></div>
  <div class = "col-md-2">
    <p>商品名</p>
  </div>
  <div class = "col-md-5">
    <%= f.text_field :name,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2"></div>
  <div class = "col-md-2">
    <p>商品説明</p>
  </div>
  <div class = "col-md-5">
    <%= f.text_area :introduction,class:"form-control", style:"margin: 3px;" %>
  </div>
</div>

<div class = "row">
  <div class = "col-md-2"></div>
  <div class = "col-md-2">
    <p>税別価格</p>
  </div>
  <div class = "col-md-5">
    <%= f.text_field :price,class:"form-control", style:"margin: 3px;" %> 
    </div>
    <div class = "text-right">
      <p></p>
       <h5>円</h5>
    </div>
    
  </div>


<div class = "text-center">
   <%= f.submit '新規登録', class:"btn btn-success" %>
</div>

<% end %>

</div>
