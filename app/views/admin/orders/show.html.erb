<div class = "container">
    <div class = "row">
        <div class = "col-md-1"></div>
        <h2>注文履歴詳細</h2>
    </div>

<div class = "row">
    <div class = "col-md-1">
        <p class="font-weight-bold">購入者</p>
    </div>
    <div class = "col-md-6">
        <%= @order.customer.last_name + @order.customer.first_name %>
    </div>
</div>

<div class = "row">
    <div class = "col-md-1">
        <p class="font-weight-bold">注文日</p>
    </div>
    <div class = "col-md-6">
        <%= @order.created_at.strftime('%Y/%m/%d') %>
    </div>
</div>

<div class = "row">
    <div class = "col-md-1">
         <p class="font-weight-bold">配送先</p>
    </div>
    <div class = "col-md-6">
        <%= '〒' + @order.delivery_postal_code %><br />
        <%= @order.delivery_adress %><br />
        <%= @order.delivery_name %>
    </div>
</div>

<div class = "row">
    <div class = "col-md-1">
        <p class="font-weight-bold">支払方法</p>
    </div>
    <div class = "col-md-6">
        <%= @order.payment_method_i18n %>
    </div>
</div>

<div class = "row">
    <div class = "col-md-6">
        <table class="table">
          <thead>
            <tr>
                <th class="bg-light d-block d-md-table-cell"><div class="text-center">商品名</div></th>
                <th class="bg-light d-block d-md-table-cell"><div class="text-center">単価(税込)</div></th>
                <th class="bg-light d-block d-md-table-cell"><div class="text-center">数量</div></th>
                <th class="bg-light d-block d-md-table-cell"><div class="text-center">小計</div></th>
            </tr>
            </thead>
            
            <tbody>
                <% @order_item.each do |order_item| %>
                <tr>
                    <td><div class="text-center"><%= order_item.item.name %></div></td>
                    <td><div class="text-center"><%= order_item.item.with_tax_price %></div></td>
                    <td><div class="text-center"><%= order_item.amount %></div></td>
                    <td><div class="text-center"><%= order_item.item.with_tax_price * order_item.amount %></div></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class = "row">
    <div class = "col-md-8"></div>
<div class = "col-md-2">
    <p class="font-weight-bold">商品合計</p>
    </div>
    <div class = "col-md-2">
        <%= @sum.round %>円
    </div>
    </div>
    <div class = "row">
         <div class = "col-md-8"></div>
            <div class = "col-md-2">
                <p class="font-weight-bold">送料</p>
            </div>
            <div class = "col-md-2">
                <%= @order.delivery_charge %>円
            </div>
    </div>
    <div class = "row">
        <div class = "col-md-8"></div>
        <div class = "col-md-2">
            <p class="font-weight-bold">請求金額合計</p>
        </div>
        <div class = "col-md-2">
            <%= @sum.round + @order.delivery_charge %>円
        </div>
    </div>
    
    
</div>
